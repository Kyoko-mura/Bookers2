<div class="body" style="margin-top: 51px; font-family: Helvetica Neue, Helvetica, Arial, sans-serif;">
  <div class="container" style="margin-left: auto 15px;">
    <div class="row" style="margin-left: -15px; margin-right: -15px;">
      <div class="col-xs-3">
        <p id="notice" style="color:green;">
          <% if flash[:notice] %>
              <%= flash[:notice] %>
          <% end %>
        </p>
        <%= render 'books/userinfo_newbook', user: @user, book:@book %>
      </div>

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
             <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
   </div>
  </div>
</div>

