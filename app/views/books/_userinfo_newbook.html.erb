<h2>User info</h2>
  <table class="table">
      <thead>
        <tr>
         <th>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
         </th>
        </tr>
      </thead>
      <tbody>
        <tr>
         <th>
           <h3>name</h3>
          </th>
          <th>
          	<%= user.name %>
          </th>
        </tr>
        <tr>
          <th>
          <h3>introduction</h3>
          </th>
          <th>
          	<%= user.introduction %>
          </th>
        </tr>
        <tr>
          <th>

          	<%= link_to edit_user_path(user.id), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-wrench"></i>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>

<h3>New book</h3>
<%= form_for(book) do |f| %>
  <h4>title</h4>
  <%= f.text_field :title, class:"form-control"%>
  <h4>Opinion</h4>
  <%= f.text_area :body, class:"form-control", rows:"3"%>
  <%= f.submit("Create Book",class: 'btn btn-primary') %>

<% end %>


