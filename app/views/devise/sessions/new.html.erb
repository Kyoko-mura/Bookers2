<div class="body" style="margin-top: 51px; font-family: Helvetica Neue, Helvetica, Arial, sans-serif;">
  <div class="container" style="margin-left: auto 15px;">
    <div class="row" style="margin-left: -15px; margin-right: -15px;">
      <h2>Log in</h2>

      <%= form_for(@user, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <h4>Name</h4>
          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
        </div>
        <div class="field">
          <h4>Password</h4>
          <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
        </div>
          <%= f.submit("Log in",class: 'btn btn-primary') %>
        <div class="checkbox">
          <label><input type="checkbox">Remember me</label>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
